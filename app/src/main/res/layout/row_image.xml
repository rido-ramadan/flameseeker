<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/action_button_margin"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:columnCount="2">

    <ImageView
        android:id="@+id/image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="@dimen/action_button_margin"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_flameseeker"
        app:layout_columnSpan="1"
        app:layout_rowSpan="2"/>

    <TextView
        android:id="@+id/image_uri"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="/image/dism/IMG_0001.JPG"
        app:layout_columnSpan="1"
        app:layout_gravity="fill_horizontal"/>

    <TextView
        android:id="@+id/image_file_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="124kb"
        app:layout_columnSpan="1"
        app:layout_gravity="fill_horizontal"/>

</android.support.v7.widget.GridLayout>